<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.perfpr.fetishapp.SignUpActivity"
        android:background="@color/colorPrimaryDark">

    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/textInputLayout">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:id="@+id/etFirst"
                android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            android:background="@android:color/white"
            android:id="@+id/textInputLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:id="@+id/etLastName"/>
    </android.support.design.widget.TextInputLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_person_blue_300_48dp"
            android:id="@+id/ivImMale"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvGender"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_person_pink_300_48dp"
            android:id="@+id/ivImFem"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/ivImTrans"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_person_purple_300_48dp"
            android:id="@+id/ivImTrans"
            app:layout_constraintStart_toEndOf="@+id/ivImMale"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ivImFem"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivImMale"
            android:layout_marginTop="0dp"/>
    <TextView
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMale"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivImMale"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/ivImMale"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivImMale"/>
    <TextView
            android:text="I am a..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tvGender"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"/>
    <TextView
            android:text="Trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvTrans"
            app:layout_constraintTop_toBottomOf="@+id/ivImTrans"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFemale"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/ivImFem"
            app:layout_constraintStart_toStartOf="@+id/ivImFem"
            app:layout_constraintEnd_toEndOf="@+id/ivImFem"
            android:layout_marginEnd="0dp"/>
    <TextView
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/btnNext"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
    <TextView
            android:text="Please Select date of birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDob"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Seeking.."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tvSeekingGender"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMale"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_person_blue_300_48dp"
            android:id="@+id/ivSeekingMale"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSeekingGender"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_person_purple_300_48dp"
            android:id="@+id/ivSeekingTrans"
            app:layout_constraintTop_toTopOf="@+id/ivSeekingMale"
            app:layout_constraintStart_toEndOf="@+id/ivSeekingMale"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ivSeekingFemale"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_person_pink_300_48dp"
            android:id="@+id/ivSeekingFemale"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/ivSeekingTrans"
            android:layout_marginTop="0dp"/>
    <TextView
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSeekingMale"
            app:layout_constraintEnd_toEndOf="@+id/ivSeekingMale"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/ivSeekingMale"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/ivSeekingMale"/>
    <TextView
            android:text="Trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvSeekingTrans"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/ivSeekingTrans"/>
    <TextView
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSeekingFem"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/ivSeekingFemale"
            app:layout_constraintStart_toStartOf="@+id/ivSeekingFemale"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="@+id/ivSeekingFemale"/>
</android.support.constraint.ConstraintLayout>
